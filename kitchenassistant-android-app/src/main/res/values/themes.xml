<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KitchenAssistant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/secondary_dark</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_radius</item>
    </style>

    <style name="InputLayoutWithCounter" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="endIconMode">clear_text</item>
        <item name="counterTextColor">@color/secondary_dark</item>
    </style>

    <style name="TextViewAutocomplete" parent="Widget.MaterialComponents.AutoCompleteTextView.FilledBox">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextEmail">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextPassword">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextText">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextNumber">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="EditTextUrl">
        <item name="android:inputType">textUri</item>
    </style>

    <style name="EditTextDescription">
        <item name="android:minLines">4</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewSubheader">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextViewUrl">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="TextViewMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Header">
        <item name="android:paddingVertical">@dimen/padding_margin_tiny</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Header1" parent="Header">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Header2" parent="Header">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextViewAppDescription">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_description</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:paddingVertical">@dimen/padding_margin_medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:backgroundTint">@color/secondary_dark</item>
        <item name="android:paddingVertical">@dimen/padding_margin_medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonTransparentImage">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/padding_margin_tiny</item>
        <item name="android:tint">@color/black</item>
        <item name="android:paddingVertical">@dimen/padding_margin_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonFloatingAction">
        <item name="android:paddingVertical">@dimen/padding_margin_medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:layout_marginBottom">@dimen/padding_margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_margin_medium</item>
    </style>

    <style name="ContentLayout">
        <item name="android:padding">@dimen/padding_margin_medium</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/primary_dark</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/secondary_dark</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="WhiteBackground">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


</resources>