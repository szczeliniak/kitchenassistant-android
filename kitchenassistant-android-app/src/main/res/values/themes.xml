<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KitchenAssistant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Header">
        <item name="android:paddingTop">@dimen/padding_margin_medium</item>
        <item name="android:paddingBottom">@dimen/padding_margin_medium</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Description">
        <item name="android:paddingTop">@dimen/padding_margin_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_margin_tiny</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_description</item>
    </style>

    <style name="Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">@dimen/padding_margin_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_margin_tiny</item>
        <item name="android:paddingLeft">@dimen/padding_margin_medium</item>
        <item name="android:paddingRight">@dimen/padding_margin_medium</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="endIconMode">clear_text</item>
        <item name="counterTextColor">@color/secondary_dark</item>
    </style>

    <style name="InputNoCounter" parent="Input">
        <item name="counterEnabled">false</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_margin_big</item>
        <item name="android:paddingRight">@dimen/padding_margin_big</item>
        <item name="android:paddingTop">@dimen/padding_margin_small</item>
        <item name="android:paddingBottom">@dimen/padding_margin_small</item>
        <item name="android:backgroundTint">@color/secondary_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/secondary_dark</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MessageText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:padding">@dimen/padding_margin_small</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AppNameNavigationView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">@dimen/padding_margin_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_margin_tiny</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>