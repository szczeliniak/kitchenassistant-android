<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KitchenAssistant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextMessage" parent="Text">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextApplicationHeaderName" parent="Text">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextApplicationHeaderDescription" parent="Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/app_description</item>
    </style>

    <style name="TextNavigationViewApplicationName" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextDialogTitle" parent="Text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="BaseLayout">
        <item name="android:padding">@dimen/padding_margin_medium</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/primary_dark</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/secondary_dark</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="WhiteBackground">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>