<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="hint" format="reference"/>
    <attr name="counterEnabled" format="boolean"/>
    <attr name="maxLength" format="integer"/>
    <attr name="icon" format="reference"/>
    <attr name="text" format="reference"/>
    <attr name="withPadding" format="boolean"/>
    <declare-styleable name="KaInput">
        <attr name="hint"/>
        <attr name="maxLength"/>
        <attr name="inputType" format="enum">
            <enum name="text" value="0"/>
            <enum name="email" value="1"/>
            <enum name="password" value="2"/>
            <enum name="uri" value="3"/>
            <enum name="multiline" value="4"/>
            <enum name="number" value="5"/>
        </attr>
        <attr name="counterEnabled"/>
        <attr name="minLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="KaAutocompleteInput">
        <attr name="hint"/>
        <attr name="counterEnabled"/>
        <attr name="maxLength"/>
    </declare-styleable>

    <declare-styleable name="KaButton">
        <attr name="style" format="enum">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
        </attr>
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="KaFloatingActionButton">
        <attr name="icon"/>
        <attr name="description" format="reference"/>
    </declare-styleable>

    <declare-styleable name="KaIconButton">
        <attr name="icon"/>
    </declare-styleable>

    <declare-styleable name="KaText">
        <attr name="text"/>
        <attr name="textColor" format="reference"/>
        <attr name="type" format="enum">
            <enum name="fieldLabel" value="0"/>
            <enum name="fieldValue" value="1"/>
            <enum name="fieldDescription" value="2"/>
            <enum name="message" value="3"/>
            <enum name="dialogTitle" value="4"/>
            <enum name="appName" value="5"/>
            <enum name="appDescription" value="6"/>
        </attr>
        <attr name="url" format="boolean"/>
        <attr name="multiline" format="boolean"/>
        <attr name="alignment" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="iconAfterText" format="reference"/>
        <attr name="iconAfterTextColor" format="reference"/>
        <attr name="iconAfterTextDescription" format="reference"/>
    </declare-styleable>

    <declare-styleable name="KaConstraintLayout">
        <attr name="withPadding"/>
    </declare-styleable>

    <declare-styleable name="KaLinearLayout">
        <attr name="withPadding"/>
    </declare-styleable>

</resources>