<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <pl.szczeliniak.kitchenassistant.android.ui.components.KaToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/toolbar"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
            android:id="@+id/layout"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaSwipeRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaRecyclerViewLayout
                    android:layout_width="match_parent"
                    android:id="@+id/recycler_view"
                    android:layout_height="match_parent"/>


        </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaSwipeRefreshLayout>

    </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>
