<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:withPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
                app:type="fieldLabel"
                tools:text="01-01-2022"
                android:layout_width="match_parent"
                android:id="@+id/shopping_list_date"
                android:layout_height="wrap_content"/>

        <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
                android:id="@+id/shopping_list_name"
                app:type="fieldValue"
                tools:text="Shopping list name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
                android:id="@+id/shopping_list_description"
                app:type="fieldDescription"
                tools:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>

    <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaIconButton
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/icon_more"/>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>