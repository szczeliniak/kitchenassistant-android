<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        style="@style/BaseLayout"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                tools:text="01-01-2022"
                android:layout_width="match_parent"
                android:id="@+id/shopping_list_date"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shopping_list_name"
                tools:text="Shopping list name"
                style="@style/TextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shopping_list_description"
                tools:text="Description"
                style="@style/TextSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <pl.szczeliniak.kitchenassistant.android.ui.components.IconButtonComponent
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/icon_more"/>

</androidx.constraintlayout.widget.ConstraintLayout>