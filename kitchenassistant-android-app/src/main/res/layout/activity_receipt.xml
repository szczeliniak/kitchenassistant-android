<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
            android:id="@+id/activity_receipt_toolbar_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            layout="@layout/toolbar"/>

    <com.google.android.material.tabs.TabLayout
            app:layout_constraintTop_toBottomOf="@id/activity_receipt_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            app:tabTextColor="@color/white"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="@color/secondary_dark"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:id="@+id/activity_receipt_tab_layout">
    </com.google.android.material.tabs.TabLayout>

    k<androidx.viewpager2.widget.ViewPager2
            android:id="@+id/activity_receipt_view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_receipt_tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>