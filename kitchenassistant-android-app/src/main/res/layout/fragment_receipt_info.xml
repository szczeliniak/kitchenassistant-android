<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:id="@+id/receipt_info_layout"
            style="@style/BaseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    app:type="fieldLabel"
                    app:text="@string/label_receipt_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    android:id="@+id/receipt_author"
                    app:type="fieldValue"
                    tools:text="@string/label_receipt_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    app:type="fieldLabel"
                    app:text="@string/label_receipt_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    android:id="@+id/receipt_category"
                    app:type="fieldValue"
                    tools:text="Category name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    app:type="fieldLabel"
                    app:text="@string/label_receipt_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    android:id="@+id/receipt_url"
                    app:type="fieldValue"
                    app:url="true"
                    tools:text="https://www.google.pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    app:type="fieldLabel"
                    app:text="@string/label_receipt_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    android:id="@+id/receipt_tags"
                    app:type="fieldValue"
                    app:multiline="true"
                    tools:text="Tag1, Tag2, Tag3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    app:type="fieldLabel"
                    app:text="@string/label_receipt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                    android:id="@+id/receipt_description"
                    app:type="fieldValue"
                    app:multiline="true"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum convallis imperdiet sollicitudin. Nulla maximus, velit non mollis ornare, dui sem lobortis mauris, vitae auctor nulla odio nec nulla. Nulla rutrum felis orci, quis tristique diam auctor non. Aliquam erat volutpat. Sed blandit est neque, id viverra orci luctus vel."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/button_add_photos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:id="@+id/photos_recycler_view"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>