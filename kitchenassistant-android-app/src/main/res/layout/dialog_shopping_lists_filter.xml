<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BaseLayout"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/title_dialog_shopping_lists_filter"
            android:id="@+id/title"
            style="@style/TextDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.ButtonComponent
            android:layout_marginVertical="@dimen/padding_margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopping_list_date"
            app:text="@string/label_button_select_date"
            app:style="primary"/>

</androidx.appcompat.widget.LinearLayoutCompat>