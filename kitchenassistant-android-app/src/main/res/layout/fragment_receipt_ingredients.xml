<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaRecyclerViewLayout
                android:layout_width="match_parent"
                android:id="@+id/recycler_view"
                android:layout_height="match_parent"/>

    </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

    <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaFloatingActionButton
            android:id="@+id/button_add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/icon_add"
            app:description="@string/description_add_ingredient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

