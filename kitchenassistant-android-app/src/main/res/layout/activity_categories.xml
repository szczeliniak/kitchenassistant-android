<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaSwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <pl.szczeliniak.kitchenassistant.android.ui.components.KaToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/toolbar"/>

        <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
                android:id="@+id/layout"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaRecyclerViewLayout
                    android:layout_width="match_parent"
                    android:id="@+id/recycler_view"
                    android:layout_height="match_parent"/>

        </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

        <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaFloatingActionButton
                android:id="@+id/button_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/icon_add"
                app:description="@string/description_add_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaSwipeRefreshLayout>

