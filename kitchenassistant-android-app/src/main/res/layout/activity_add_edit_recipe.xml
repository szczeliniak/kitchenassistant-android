<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar_layout"
             app:layout_constraintTop_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                style="@style/ContentLayout"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterMaxLength="@integer/max_length_recipe_name"
                    style="@style/InputLayoutWithCounter"
                    android:id="@+id/recipe_name_layout"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextText"
                        android:hint="@string/label_recipe_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="@integer/max_length_recipe_name"
                        android:id="@+id/recipe_name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterMaxLength="@integer/max_length_recipe_author"
                    style="@style/InputLayoutWithCounter"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        style="@style/TextViewAutocomplete"
                        android:hint="@string/label_recipe_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="@integer/max_length_recipe_author"
                        android:id="@+id/recipe_author"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:id="@+id/recipe_category"
                    android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterMaxLength="@integer/max_length_recipe_url"
                    style="@style/InputLayoutWithCounter"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:hint="@string/label_recipe_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="@integer/max_length_recipe_url"
                        style="@style/EditTextUrl"
                        android:id="@+id/recipe_url"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterMaxLength="@integer/max_length_recipe_description"
                    style="@style/InputLayoutWithCounter"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:hint="@string/label_recipe_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextDescription"
                        android:maxLength="@integer/max_length_recipe_description"
                        android:id="@+id/recipe_description"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tag_input_layout"
                    android:layout_width="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="@integer/max_length_recipe_tag"
                    style="@style/InputLayout"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        style="@style/TextViewAutocomplete"
                        android:hint="@string/label_recipe_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="@integer/max_length_recipe_tag"
                        android:id="@+id/tag"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tag_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_change_photo"
                        style="@style/ButtonSecondary"
                        android:text="@string/label_button_add_photo"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/recipe_photo_name"
                        android:visibility="gone"
                />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/recipe_photo_container"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/button_change_photo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="gone"
                        style="@style/ContentLayout"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="match_parent"
                            android:id="@+id/recipe_photo"
                            android:layout_height="0dp"
                            android:contentDescription="@string/description_recipe_photo"
                            app:layout_constraintDimensionRatio="1:1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>