<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
             android:id="@id/toolbar_layout"
             app:layout_constraintTop_toBottomOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/BaseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <pl.szczeliniak.kitchenassistant.android.ui.components.InputComponent
                    android:layout_width="match_parent"
                    android:id="@+id/shopping_list_name"
                    app:hint="@string/label_shopping_list_name"
                    app:maxLength="@integer/max_length_shopping_list_name"
                    app:inputType="text"
                    app:counterEnabled="true"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.InputComponent
                    android:layout_width="match_parent"
                    android:id="@+id/shopping_list_description"
                    app:hint="@string/label_shopping_list_description"
                    app:maxLength="@integer/max_length_shopping_list_description"
                    app:inputType="multiline"
                    app:minLines="4"
                    app:counterEnabled="true"
                    android:layout_height="wrap_content"/>

            <pl.szczeliniak.kitchenassistant.android.ui.components.ButtonComponent
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopping_list_date"
                    app:text="@string/label_button_select_date"
                    app:style="primary"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>