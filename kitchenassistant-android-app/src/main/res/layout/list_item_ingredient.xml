<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        app:withPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
            android:layout_gravity="center_vertical"
            android:id="@+id/ingredient_name"
            app:type="fieldDescription"
            tools:text="Name"
            app:alignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
            android:layout_gravity="center_vertical"
            android:id="@+id/ingredient_quantity"
            app:type="fieldDescription"
            tools:text="Quantity"
            app:alignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaIconButton
            android:id="@+id/button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/icon_more"/>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>