<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="@dimen/padding_margin_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            tools:text="Step name"
            style="@style/ListItemTextPrimaryCentered"
            android:gravity="center"
            android:id="@+id/list_item_step_textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            tools:text="Step description"
            android:paddingVertical="@dimen/padding_margin_small"
            style="@style/ListItemTextSecondaryCentered"
            android:id="@+id/list_item_step_textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>