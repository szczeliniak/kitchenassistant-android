<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        style="@style/BaseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
                android:id="@+id/step_name"
                app:type="fieldValue"
                tools:text="Step name"
                app:alignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                tools:text="Step description"
                style="@style/TextSecondary"
                android:gravity="center"
                android:id="@+id/step_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <pl.szczeliniak.kitchenassistant.android.ui.components.IconButtonComponent
            android:id="@+id/button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/icon_more"/>

</androidx.appcompat.widget.LinearLayoutCompat>