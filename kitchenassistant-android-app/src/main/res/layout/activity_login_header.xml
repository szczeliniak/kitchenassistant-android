<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_margin_super_big"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/logo_size_big"
            android:layout_height="@dimen/logo_size_big"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/ApplicationHeaderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/ApplicationHeaderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>