<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/BaseLayout"
        android:orientation="vertical">

    <pl.szczeliniak.kitchenassistant.android.ui.components.TextComponent
            android:id="@+id/title"
            app:type="dialogTitle"
            app:text="@string/title_dialog_receipts_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:id="@+id/receipt_category"
            android:layout_height="wrap_content"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.InputComponent
            android:layout_width="match_parent"
            android:id="@+id/receipt_tag_name"
            app:hint="@string/label_receipt_tag"
            app:maxLength="@integer/max_length_receipt_tag"
            app:inputType="text"
            app:counterEnabled="true"
            android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>