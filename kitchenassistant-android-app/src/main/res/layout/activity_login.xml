<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaNestedScrollViewLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/image_size_big"
                        android:layout_height="@dimen/image_size_big"
                        android:layout_gravity="center"
                        android:src="@drawable/logo"/>

                <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
                        app:type="appName"
                        app:textColor="@color/black"
                        app:text="@string/app_name"
                        app:alignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
                        app:type="appDescription"
                        app:text="@string/app_description"
                        app:alignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>

            <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
                    android:orientation="vertical"
                    app:withPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaInput
                        android:layout_width="match_parent"
                        android:id="@+id/login_email"
                        custom:hint="@string/form_login_email"
                        custom:maxLength="@integer/max_length_email"
                        custom:inputType="email"
                        android:layout_height="wrap_content"/>

                <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaInput
                        android:layout_width="match_parent"
                        android:id="@+id/login_password"
                        custom:hint="@string/form_login_password"
                        custom:maxLength="@integer/max_length_password"
                        custom:inputType="password"
                        android:layout_height="wrap_content"/>

                <pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/padding_margin_tiny"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/button_login"
                            app:text="@string/label_button_login"
                            app:style="primary"/>

                    <pl.szczeliniak.kitchenassistant.android.ui.components.buttons.KaButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/button_register"
                            app:text="@string/label_button_register"
                            app:style="secondary"/>

                </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>

            </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>

        </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>

    </pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaNestedScrollViewLayout>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaConstraintLayout>

