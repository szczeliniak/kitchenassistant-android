<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/padding_margin_tiny"
        android:paddingVertical="@dimen/padding_margin_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ingredient_is_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center_vertical"
            tools:text="@string/placeholder_ingredient_name"
            style="@style/TextViewDescription"
            android:textColor="@color/secondary_dark"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/ingredient_name"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center_vertical"
            tools:text="@string/placeholder_ingredient_description"
            style="@style/TextViewDescription"
            android:gravity="center"
            android:id="@+id/ingredient_quantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>