<?xml version="1.0" encoding="utf-8"?>
<pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:withPadding="true"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

    <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
            app:type="fieldLabel"
            tools:text="01-01-1111"
            android:layout_width="match_parent"
            android:id="@+id/shopping_list_date"
            android:layout_height="wrap_content"/>

    <pl.szczeliniak.kitchenassistant.android.ui.components.forms.KaText
            android:id="@+id/shopping_list_name"
            app:type="fieldValue"
            tools:text="Some list name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</pl.szczeliniak.kitchenassistant.android.ui.components.layouts.KaLinearLayout>