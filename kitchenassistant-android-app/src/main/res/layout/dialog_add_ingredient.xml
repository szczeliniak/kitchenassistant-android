<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingHorizontal="@dimen/padding_margin_big"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/dialog_add_ingredient_title"
            style="@style/DialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/ingredient_name_max_length"
            style="@style/Input"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/ingredient_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/ingredient_name_max_length"
                android:inputType="text"
                android:id="@+id/dialog_add_ingredient_edittext_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/ingredient_quantity_max_length"
            style="@style/Input"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/ingredient_quantity_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/ingredient_quantity_max_length"
                android:inputType="text"
                android:id="@+id/dialog_add_ingredient_edittext_quantity"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/dialog_add_ingredient_spinner_unit"
            android:padding="@dimen/padding_margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>