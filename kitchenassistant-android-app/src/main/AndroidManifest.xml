<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.szczeliniak.kitchenassistant.android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:name="pl.szczeliniak.kitchenassistant.android.KitchenAssistantApplication"
            android:fullBackupContent="true"
            android:theme="@style/Theme.KitchenAssistant">
        <activity
                android:name="pl.szczeliniak.kitchenassistant.android.ui.activities.login.LoginActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="pl.szczeliniak.kitchenassistant.android.ui.activities.main.MainActivity"
                android:exported="false">
        </activity>
        <activity
                android:name="pl.szczeliniak.kitchenassistant.android.ui.activities.receipt.ReceiptActivity"
                android:exported="false">
        </activity>
        <activity
                android:name="pl.szczeliniak.kitchenassistant.android.ui.activities.addreceipt.AddReceiptActivity"
                android:exported="false">
        </activity>
        <activity
                android:name="pl.szczeliniak.kitchenassistant.android.ui.activities.addshoppinglist.AddShoppingListActivity"
                android:exported="false">
        </activity>
    </application>

</manifest>